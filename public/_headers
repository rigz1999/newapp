# Netlify/Vercel Headers Configuration
# Path: public/_headers

/*
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()

  # Content Security Policy (detailed for production)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://*.sentry.io https://bolt.new blob:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https: blob:; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https://*.supabase.co https://*.sentry.io wss://*.supabase.co; frame-src 'none'; object-src 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests;

  # Caching headers for static assets
  Cache-Control: public, max-age=31536000, immutable

# API routes - no cache
/api/*
  Cache-Control: no-store, no-cache, must-revalidate

# HTML - no cache (always fresh)
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
